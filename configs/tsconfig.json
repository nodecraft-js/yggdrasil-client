{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "../",
        "lib": [
            "dom",
            "es2015",
            "es2016",
        ],
        "paths": {
            "*": [
                "*",
                "node_modules/*",
                "src/types/*",
            ],
            "jest-in-case": [
                "types/jest-in-case",
            ],
        },
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
    },
}